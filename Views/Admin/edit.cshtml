@model eadp1.Models.Product
@{
    Layout="~/Views/Shared/_Layout2.cshtml";	
}
	
<div id="body">
    <div id="contents">
        <h1>New Product </h1>
        @using (Html.BeginForm()) 
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend style="color:yellow">Product</legend>
                <div>
                    var c = model=>model.imgLink;
                    
                    <img src="c" style="height:250px; width:250px">
                 </div>
                <div class="editor-label" style="color:yellow">
                    @Html.LabelFor(model => model.brandName)
                </div>
                
                <div class="editor-field">
                    @Html.EditorFor(model => model.brandName) 

                </div>
                
                <div class="editor-label" style="color:yellow">
                    @Html.LabelFor(model => model.price)
                </div>
                
                <div class="editor-field">
                    @Html.EditorFor(model => model.price)
           
                </div>

                <div class="editor-label">
                    <Label style="color:yellow">Image:</Label>
           
                </div>
                
                <div >
                    <form method="post" enctype="multipart/form-data" >

                        Upload Image: <input type="file" name="image" style="color:yellow" />
                         
                       
                    </form>
                 
                </div>

                <p>
                    <input type="submit" value="Edit"  />
                </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to Home", "Index")
    </div>
    </div>
</div>	
